{
    "name": "egbosionu/lara-http-enums",
    "description": "A collection of HTTP-related PHP enums for Laravel applications",
    "type": "library",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Egbosionu\\LaraHttpEnums\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Egbosionu\\LaraHttpEnums\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest"
    }
}